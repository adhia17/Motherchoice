<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/point_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fragpoint"
    tools:context="com.a4nesia.motherchoice.PointFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="POINT MOMMY"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/point_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#000"
            android:textSize="34sp" />

        <Button
            android:id="@+id/point_play"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/transparan"
            android:text="Mainkan Point mom"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/point_buy"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/transparan"
                android:text="Beli Voucher"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/point_voucher"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/transparan"
                android:text="Voucher Mom"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/point_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>
